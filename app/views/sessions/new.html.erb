<div class="session new">

    <div class="sessions">

        <%= form_for(:user, url: sessions_path, html: { id: "session-create-form" }) do |f| %>
        <h1 class="h1-big">
            LOGIN
        </h1>

        <div class="form-group">
            <h4>
                <%= f.label :email_field, "Email" %>
            </h4>
            <%= f.text_field :email, required: true, id: "user_email_field", class: 'form-control' %>
        </div>

        <div class="form-group">
            <h4>
                <%= f.label :text_field, "Password" %>
            </h4>
            <%= f.password_field :password, required: true, id: "user_password_digest_field", class: 'form-control' %>
        </div>

        <div class="form-group text-center">
            <%= f.submit "Login!", class: "btn btn-success btn-lg" %>
        </div>

        <h5 class="text-center">
            <%= link_to "I forgot my password" , new_password_reset_path %>
        </h5>

        <% end %>

    </div>

</div>
