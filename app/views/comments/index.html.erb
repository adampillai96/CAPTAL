<div class="comment">

  <div class="title-comment">
<h1 class="h1-big">Comments</h1>
<%= link_to "NEW" , new_topic_post_comment_path(@topic, @post, @comment), class:"btn btn-primary" %>
</div>

<div class="comment-parent text-center">
  <% @comments.each do |comment| %>
    <div class="comment-child">
      <%= link_to topic_post_comments_path(@topic, @post, comment), class: "content" do %>
        <h5 class="h5-big"><%= comment.body %></h5>
      <% end %>
      <div class="content2">
        <%= link_to "EDIT" , edit_topic_post_comment_path(@topic, @post, comment), class:"btn btn-primary" %>
        <%= link_to "DELETE", topic_post_comment_path(@topic, @post, comment), method: :delete, data: { confirm: "Delete?" }, class:"btn btn-primary" %>

      </div>
    </div>
  <% end %>
</div>

</div>
