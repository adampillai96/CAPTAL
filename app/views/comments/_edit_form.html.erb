<%= form_for(comment, url: topic_post_comment_path, authenticity_token: true, remote: true, html: { id:"edit_comment_form" , multipart: true }) do |f| %>
    Edit Comment
  </h1>


  <div class="form-group">
    <h4> <%= f.label :text_field, "Description" %> </h4>
    <%= f.text_field :body, id: "post_body_field", class: 'form-control' %>
  </div>


<!-- this is where u add image -->
  <div class="form-group">
      <h4 class="text-center"> Post Image </h4>
      <div id="preview-image">
        <% if @comment.image? %>
          <%= image_tag @comment.image, class: "img-settings img-responsive center-block" %>
        <% end %>
      </div>
    </div>

  <div class="form-group">
    <%= f.file_field :image, id: "post_image_field", class: 'form-control image-uploader' %>
  </div>


<!-- Update Button -->

<div class="form-group text-center">
  <%= f.submit "Update Comment", remote: true, class: "btn btn-success btn-lg" %>
</div>


<% end %>
